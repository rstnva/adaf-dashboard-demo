{
  "name": "@lav-adaf/monorepo",
  "version": "1.3.0",
  "private": true,
  "description": "LAV/ADAF - Sistema Integral de Agentes de Trading Cuantitativo",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter gateway --filter market-sentinel --filter risk-warden dev",
    "dev:defi": "pnpm --filter defi-ranger --filter basis-maker --filter pendle-alchemist dev",
    "dev:ml": "pnpm --filter alpha-factory --filter regime-detector dev",
    "test": "pnpm -r test",
    "test:integration": "pnpm -r test:integration",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter infra db:migrate",
    "db:seed": "pnpm --filter infra db:seed",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "start-core": "make start-core",
    "smoke-test": "make smoke-test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1"
}