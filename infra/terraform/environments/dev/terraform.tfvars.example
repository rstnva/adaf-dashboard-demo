# ADAF Development Environment Configuration
# Copy this file to terraform.tfvars and modify values as needed

# AWS Configuration
aws_region = "us-west-2"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
enable_nat_gateway = true
enable_flow_logs   = false

# RDS Configuration
postgres_version                 = "15.4"
rds_instance_class              = "db.t3.micro"
rds_allocated_storage           = 20
rds_max_allocated_storage       = 100
database_name                   = "adaf_dev"
database_username               = "postgres"
rds_multi_az                   = false
backup_retention_period        = 1
backup_window                  = "03:00-04:00"
maintenance_window             = "sun:04:00-sun:05:00"
enhanced_monitoring_interval   = 0
performance_insights_enabled   = false
rds_deletion_protection        = false
skip_final_snapshot           = true

# Redis Configuration
redis_version               = "7.0"
redis_node_type            = "cache.t3.micro"
redis_num_cache_clusters   = 1
redis_encryption_at_rest   = false
redis_encryption_in_transit = false
redis_auth_token_enabled   = false
redis_snapshot_retention   = 1
redis_snapshot_window      = "03:00-05:00"
redis_maintenance_window   = "sun:05:00-sun:06:00"

# Application Configuration
app_port           = 3000
health_check_path  = "/health"

# Monitoring Configuration
create_cloudwatch_alarms = true